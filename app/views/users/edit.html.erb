<%= render 'layouts/header' %>

<div class="edit-flame">
  <h1>自己紹介を編集する</h1>
  <%= form_with(model: @user) do |f| %>
  <div class="edit-box">
    <div class="edit-self-introduction">
      <label>自己紹介文</label>
      <%= f.text_area :introduction, class: 'edit-self-introduction-form' %>
      <label>50文字以上、200文字未満で入力してください。</label>
    </div>
    <div class="add-img-box">
      <label>アバター画像</label>
      <div class="custom-file-input">
        <button><%= f.label '画像ファイルを添付する', class: 'custom-file-label' %></button>
        <%= f.file_field :avatar, class: 'custom-file-input', accept: 'image/*' %>
      </div>
    </div>
    <div class="edit-confirm">
    <%= f.submit "自己紹介を確定する", class: "edit-confirm-button" %>
    </div>
  </div>
  <% end %>
</div>
<%= render 'layouts/footer' %>


